<script>
    let currentFrame = 0;
    const frames = [
        {
            imgSrc: "https://via.placeholder.com/300",
            imgDesc: "Description for the placeholder image 1."
        },
        {
            imgSrc: "https://via.placeholder.com/300",
            imgDesc: "Description for the placeholder image 2."
        },
        {
            imgSrc: "https://via.placeholder.com/300",
            imgDesc: "Description for the placeholder image 3."
        }
    ];

    function nextFrame() {
        currentFrame = (currentFrame + 1) % frames.length;
        updateFrame();
    }

    function prevFrame() {
        currentFrame = (currentFrame - 1 + frames.length) % frames.length;
        updateFrame();
    }

    function updateFrame() {
        const frame = frames[currentFrame];
        document.querySelector('.right .gallery-item img').src = frame.imgSrc;
        document.querySelector('.right .gallery-description').innerHTML = `<p><strong>${frame.imgDesc}</strong></p>`;
    }

    function toggleExpand(id) {
        var text = document.getElementById(id);
        text.style.display = text.style.display === "block" ? "none" : "block";
    }
</script>

